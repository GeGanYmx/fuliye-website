      <div id="singupcontent">
        <div class="texthead">Create your account</div>
        <div class="text" id="headbelow">
            <img src="./assets/content_icon7.png" />
          Please fill your account details below.
        </div>
        <form id="form1" action="#" method="post">
          <div id="inputgroup" class="table">
            <div class="tr">
              <div class="td table-left">* FIRST NAME</div>
              <div class="td table-right"><input type="text" name="firstName" class="input" required required oninvalid="setCustomValidity('Please fill this blank');" oninput="setCustomValidity('');"></div>
            </div>
            <div class="tr">
                <div class="td table-left">* LAST NAME</div>
                <div class="td table-right"><input type="text" name="lastName" class="input" required oninvalid="setCustomValidity('Please fill this blank');" oninput="setCustomValidity('');"></div>
              </div>
            <div class="tr">
              <div class="td table-left">* EMAIL</div>
              <div class="td table-right"><input type="email" name="email" class="input" required oninvalid="setCustomValidity('Please fill this blank');" oninput="setCustomValidity('');"></div>
            </div>
            <div class="tr">
              <div class="td table-left">* PASSWORD</div>
              <div class="td table-right"><input type="password" name="password" class="input" required id="pwd" oninvalid="setCustomValidity('Please fill this blank');" oninput="setCustomValidity('');"></div>
            </div>
            <div class="tr">
              <div class="td table-left">* PASSWORD CONFIRMATION</div>
              <div class="td table-right"><input type="password" name="pwd2" class="input" required id="pwd2" onblur="validate()" oninvalid="setCustomValidity('Please fill this blank');" oninput="setCustomValidity('');"></div>
            </div>
            <div class="tr">
              <div class="td table-left">* COMPANY/INSTITUTION</div>
              <div class="td table-right"><input type="text" name="institution" class="input" required oninvalid="setCustomValidity('Please fill this blank');" oninput="setCustomValidity('');"></div>
            </div>
            <div class="tr">
                <div class="td table-left">* COUNTRY</div>
                <div class="td table-right"><input type="text" name="country" class="input" required oninvalid="setCustomValidity('Please fill this blank');" oninput="setCustomValidity('');"></div>
            </div>
            <div class="tr" style="display:none">
                <div class="td table-left">link</div>
                <div class="td table-right"><input type="text" name="link" class="input" id="link"></div>
            </div>
          </div>

          <div id="textgroup">
            <div class="text" id="check1">
                <input type="checkbox" value="0" id="checkbox-1" style="display: none;">
                <label for="checkbox-1"></label> I want to receive EXOPS Newsletter.</div>
              <div class="text" id="check2">
                  <input type="checkbox" value="0" id="checkbox-2" style="display: none;">
                  <label for="checkbox-2"></label> I agree with EXOPS  <a href="termOfUse.html">Terms of Use</a> and <a href="privacypolicy.html">Privacy Policy</a>.</div>
              <div class="text" >* Required Fields</div>
        </div>
         <a href=""></a>
          <div id="btngroup">
            <button class="btn" id="cancle"type="reset">Cancel</button>
            <button class="btn" id="creat" type="submit">Create an account</button>
          </div>


        </form>
       
      
      
     
      
